<div class="overflow-hidden mb-{{ section.settings.margin_bottom_mobile }} mt-{{ section.settings.margin_top_mobile }} md:mb-{{ section.settings.margin_bottom }} md:mt-{{ section.settings.margin_top }} md:{{ section.settings.image_width }} {{ section.settings.image_width_mobile }} mx-auto rounded-2xl shadow-lg">
  <img src="{{ section.settings.image | image_url: width: section.settings.image.width }}" class="w-full">
</div>

{% schema %}
  {
    "name": "banner块",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "选择图片"
      },
      {
        "type": "select",
        "id": "image_width",
        "label": "桌面端图片最大宽度",
        "default": "max-w-5xl",
        "options": [
          {
            "value": "max-w-4xl",
            "label": "max-w-4xl"
          }, {
            "value": "max-w-5xl",
            "label": "max-w-5xl"
          }
        ]
      },
      {
        "type": "select",
        "id": "image_width_mobile",
        "label": "移动端图片宽度",
        "default": "w-4/5",
        "options": [
          {
            "value": "w-3/4",
            "label": "75"
          }, {
            "value": "w-4/5",
            "label": "80%"
          }, {
            "value": "w-11/12",
            "label": "91.6%"
          }
        ]
      },
      {
        "type": "range",
        "id": "margin_top",
        "label": "上边距",
        "min": 0,
        "max": 16,
        "default": 12
      }, {
        "type": "range",
        "id": "margin_top_mobile",
        "label": "移动端上边距",
        "min": 0,
        "max": 16,
        "default": 2
      }, {
        "type": "range",
        "id": "margin_bottom",
        "label": "下边距",
        "min": 0,
        "max": 16,
        "default": 4
      }, {
        "type": "range",
        "id": "margin_bottom_mobile",
        "label": "移动端下边距",
        "min": 0,
        "max": 16,
        "default": 2
      }
    ],
    "presets": [
      {
        "name": "banner块"
      }
    ]
  }
{% endschema %}